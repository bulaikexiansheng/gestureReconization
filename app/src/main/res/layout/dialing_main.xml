<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialing_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/titleGreen2">
    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/goback_from_dia"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/white_left" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center" >

            <TextView
                android:id="@+id/text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="拨  打  电  话"
                android:layout_gravity="center"
                android:textSize="23dp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/add_dia"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/little_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/corner"
        android:layout_marginTop="75dp">

        <EditText
            android:id="@+id/num_box"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/make_call_image"
            android:layout_width="90dp"
            android:layout_height="103dp"
            android:layout_below="@+id/num_box"
            android:layout_marginTop="110dp"
            android:layout_gravity="center"
            android:src="@mipmap/call" />
<!--        <Button-->
<!--            android:layout_below="@+id/make_call_image"-->
<!--            android:id="@+id/temp"-->
<!--            android:background="@color/white"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->

    </LinearLayout>









</RelativeLayout>